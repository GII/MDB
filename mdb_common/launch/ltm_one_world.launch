<launch>
	<arg name="backup" default="ltm.backup"/>
	<arg name="config_file" default="$(find mdb_common)/config/ltm_motiven_one_world.yaml"/>
	<arg name="log_level" default="DEBUG"/>
	<arg name="debug" default="False"/>
	<arg name="simulator" default="False"/>
	<arg name="motiven" default="True"/>
	<arg name="plot" default="True"/>
	<arg name="plot_arg" value="" unless="$(arg plot)"/>
	<arg name="plot_arg" value="--plot" if="$(arg plot)"/>
	<arg name="standalone" default="False"/>
	<arg name="standalone_arg" value="" unless="$(arg standalone)"/>
	<arg name="standalone_arg" value="--standalone" if="$(arg standalone)"/>
	<rosparam file="$(find mdb_common)/config/ros_parameters.yaml"/>
	<group ns="mdb" unless="$(arg debug)">
		<node pkg="mdb_simulator" type="mdb_simulator" name="simulator" args="-c $(arg config_file) -l $(arg log_level)" if="$(arg simulator)"/>
		<node pkg="mdb_motiven" type="mdb_motiven" name="motiven" args="-l $(arg log_level) $(arg standalone_arg)" if="$(arg motiven)"/>
		<node pkg="mdb_ltm" type="mdb_ltm" name="ltm" args="-b $(arg backup) -s $(arg config_file) -l $(arg log_level) $(arg plot_arg)"/>
	</group>
	<group ns="mdb" if="$(arg debug)">
		<node pkg="mdb_simulator" type="mdb_simulator" name="simulator" args="-c $(arg config_file) -l $(arg log_level)" launch-prefix="xterm -e python -m pdb" if="$(arg simulator)"/>
		<node pkg="mdb_motiven" type="mdb_motiven" name="motiven" args="-l $(arg log_level) $(arg standalone_arg)" launch-prefix="xterm -e python -m pdb" if="$(arg motiven)"/>
		<node pkg="mdb_ltm" type="mdb_ltm" name="ltm" args="-b $(arg backup) -s $(arg config_file) -l $(arg log_level) $(arg plot_arg)" launch-prefix="xterm -e python -m pdb"/>
	</group>
</launch>
